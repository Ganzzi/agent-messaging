# Test Environment Configuration
# This file contains settings specifically for running tests

# Database Configuration (Test Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=agent_messaging_test

# Connection Pool Settings (Smaller for tests)
POSTGRES_MAX_POOL_SIZE=5
POSTGRES_MIN_POOL_SIZE=1
POSTGRES_CONNECT_TIMEOUT_SEC=5

# Messaging Timeouts (Faster for tests)
MESSAGING_DEFAULT_SYNC_TIMEOUT=5.0
MESSAGING_DEFAULT_MEETING_TURN_DURATION=10.0
MESSAGING_HANDLER_TIMEOUT=5.0

# Test Environment
DEBUG=true
LOG_LEVEL=WARNING
TESTING=true

# Test-specific settings
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5433/agent_messaging_test
CLEANUP_AFTER_TESTS=true